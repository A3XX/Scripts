
# Get the network adapter details
$adapter = Get-NetAdapter | Where-Object {$_.InterfaceDescription -match "Ethernet"}

# Display the network connection details
Write-Host "Adapter Name: " $adapter.Name
Write-Host "Adapter Description: " $adapter.InterfaceDescription
Write-Host "Adapter Status: " $adapter.Status

# Get the IP address configuration details
$ipConfig = $adapter | Get-NetIPAddress -AddressFamily IPv4

# Display the IP address configuration details
foreach ($config in $ipConfig) {
    Write-Host "IP Address: " $config.IPAddress
    Write-Host "Subnet Mask: " $config.SubnetMask
}

# Get the default gateway details
$defaultGateway = $adapter | Get-NetRoute -AddressFamily IPv4 -DestinationPrefix 0.0.0.0/0

# Display the default gateway details
foreach ($gateway in $defaultGateway) {
    Write-Host "Default Gateway: " $gateway.NextHop
}
